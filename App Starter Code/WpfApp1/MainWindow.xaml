<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="35">
            <Button x:Name="p1Button" Content="Page 1" MinWidth="100" Click="p1Button_Click"></Button>
            <Button x:Name="p2Button" Content="Page 2" MinWidth="100" Margin="10, 0, 0, 0" Click="p2Button_Click"></Button>
        </StackPanel>
        <Frame x:Name="Main" NavigationUIVisibility="Hidden" Margin="0, 35, 0, 0"></Frame>
    </Grid>
</Window>
